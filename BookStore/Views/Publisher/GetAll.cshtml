@model IEnumerable<BookStore.Models.Domain.Publisher>
@{
    
}



<div class ="container pt-5">
    <div class=" row">
        <div classs="col-md-6">
            <a class="btn btn-dark" href="/Publisher/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
    <h3>Publishers </h3>
    <table class="table table-stripped table-bordered table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>        
        <tbody>
            @foreach(var item in  Model)
            {
                <tr>
                    <td>@item.PublisherName</td>
                    <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id"><i class="bg-info bi-pen"></i>Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are You sure?')" href="/Publisher/Delete?id=@item.Id"><i class="bg-info bi-pen"></i>Delete</a>


                    </td>
                </tr>
            
            }
        </tbody>
        </table>
</div>

    </div>
    </div>
