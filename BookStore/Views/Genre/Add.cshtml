@model BookStore.Models.Domain.Genre
@{
    
}



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add New Genre</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Genre Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter genre name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-info" role="alert">
                                @TempData["msg"]
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Save Genre
                            </button>
                            <a href="/Genre/GetAll" class="btn btn-outline-secondary">
                                <i class="bi bi-list me-2"></i>View All Genres
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>