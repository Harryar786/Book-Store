@model IEnumerable<BookStore.Models.Domain.Genre>
@{
    
}
<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>


<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">Genres</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a class="btn btn-primary" href="/Genre/Add">
                <i class="bi bi-plus-circle me-2"></i>Add New Genre
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-2" href="/Genre/Update?id=@item.Id">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" href="/Genre/Delete?id=@item.Id"
                                       onclick="return confirm('Are you sure you want to delete this genre?')">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

