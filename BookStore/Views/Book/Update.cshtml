
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2ecc71;
            --accent-color: #e74c3c;
            --background-color: #ecf0f1;
            --text-color: #34495e;
            --light-text-color: #ffffff;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .form-container {
            background-color: var(--light-text-color);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }

        h3 {
            color: var(--primary-color);
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            border-color: var(--primary-color);
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

        .btn {
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-dark {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-dark:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .btn-primary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }

        .btn-primary:hover {
            background-color: #27ae60;
            border-color: #27ae60;
        }

        label {
            color: var(--primary-color);
            font-weight: 600;
        }

        .text-danger {
            color: var(--accent-color) !important;
        }

        .alert-info {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: var(--light-text-color);
        }
    </style>
</head>
<body>
    @model BookStore.Models.Domain.Book
    @{

    }
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 form-container animate__animated animate__fadeIn">
                <h3 class="text-center mb-4">Update Book</h3>
                <form asp-action="Update" method="post" id="updateForm">
                    <input type="hidden" class="form-control" asp-for="Id" />

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="Title">Title *</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="GenreId">Genre *</label>
                        <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                            <option value="">--select--</option>
                        </select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="Isbn">ISBN *</label>
                        <input type="text" class="form-control" asp-for="Isbn" />
                        <span asp-validation-for="Isbn" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="TotalPages">Total Pages *</label>
                        <input type="number" class="form-control" asp-for="TotalPages" />
                        <span asp-validation-for="TotalPages" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="AuthorId">Author *</label>
                        <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
                            <option value="">--select--</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>

                    <div class="form-group animate__animated animate__fadeInUp">
                        <label asp-for="PublisherId">Publisher *</label>
                        <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
                            <option value="">--select--</option>
                        </select>
                        <span asp-validation-for="PublisherId" class="text-danger"></span>
                    </div>

                    @if (TempData["msg"] != null)

                    {
                        <div class="alert alert-info animate__animated animate__fadeIn" role="alert">
                            @TempData["msg"]
                        </div>
                    }

                    <div class="form-group pt-3 text-center animate__animated animate__fadeInUp">
                        <button type="submit" class="btn btn-dark">Save</button>
                        <a href="/Book/GetAll" class="btn btn-primary">
                            <i class="bi bi-list"></i>
                            List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#updateForm').on('submit', function() {
                $('button[type="submit"]').addClass('animate__animated animate__pulse');
            });

            $('.form-control').on('focus', function() {
                $(this).closest('.form-group').addClass('animate__animated animate__pulse');
            }).on('blur', function() {
                $(this).closest('.form-group').removeClass('animate__animated animate__pulse');
            });
        });
    </script>
</body>
</html>